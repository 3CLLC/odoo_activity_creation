<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Settings form view -->
        <record id="res_config_settings_view_form_inherit_auto_email_activity" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.auto.email.activity</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='about']" position="before">
                    <div class="app_settings_block" data-string="Auto Email Activity" string="Auto Email Activity" data-key="auto_email_activity_creation">
                        <h2>Email Activity Creation</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-8 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="auto_email_activity_enabled"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="auto_email_activity_enabled"/>
                                    <div class="text-muted">
                                        Automatically create completed activities when external emails are sent via chatter in Helpdesk and Sales apps
                                    </div>
                                    
                                    <div class="content-group mt16" invisible="auto_email_activity_enabled == False">
                                        <!-- User Groups Selection - Direct selection from res.groups -->
                                        <div class="row">
                                            <div class="col-12">
                                                <label for="auto_email_user_groups" class="o_form_label">
                                                    <strong>User Groups</strong>
                                                </label>
                                                <div class="text-muted small mb8">
                                                    Select which user groups will have automatic email activities created
                                                </div>
                                                
                                                <field name="auto_email_user_groups" widget="many2many_tags" 
                                                       domain="[('category_id', '!=', False)]"
                                                       context="{'create': False, 'create_edit': False}"/>
                                                
                                                <!-- Show selected groups with user counts -->
                                                <div class="mt8" invisible="auto_email_user_groups == []">
                                                    <strong>Selected Groups:</strong>
                                                    <field name="auto_email_user_groups" mode="list" readonly="1">
                                                        <list>
                                                            <field name="name"/>
                                                            <field name="users" string="Active Users">
                                                                <span><field name="users"/> users</span>
                                                            </field>
                                                        </list>
                                                    </field>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <!-- Summary Information -->
                                        <div class="row mt16">
                                            <div class="col-6">
                                                <div class="alert alert-info" role="alert">
                                                    <i class="fa fa-users mr8"/>
                                                    <strong>Total Affected Users:</strong>
                                                    <field name="total_affected_users" readonly="1" class="ml8"/>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <button string="Manage Groups" 
                                                        type="object" 
                                                        name="action_view_group_configs"
                                                        class="btn btn-secondary btn-sm"
                                                        invisible="auto_email_user_groups == []"
                                                        icon="fa-cog">
                                                </button>
                                            </div>
                                        </div>
                                        
                                        <!-- Information Alert -->
                                        <div class="alert alert-warning mt16" role="alert">
                                            <h6><i class="fa fa-info-circle mr8"/>Important Notes:</h6>
                                            <ul class="mb0">
                                                <li>Activities will only be created for emails sent through chatter in <strong>Sales Orders</strong>, <strong>CRM Leads</strong>, and <strong>Helpdesk Tickets</strong></li>
                                                <li>Only <strong>external emails</strong> (to customers/partners) will trigger activity creation</li>
                                                <li>Users must have <strong>write access</strong> to the record to create activities</li>
                                                <li>Only active groups will trigger activity creation</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
        
        <!-- Group Configuration Form View -->
        <record id="auto_email_group_config_view_form" model="ir.ui.view">
            <field name="name">auto.email.group.config.view.form</field>
            <field name="model">auto.email.group.config</field>
            <field name="arch" type="xml">
                <form string="Auto Email Group Configuration">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="group_id" placeholder="Select User Group..."/>
                            </h1>
                        </div>
                        <group>
                            <field name="active"/>
                            <field name="user_count" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Group Configuration List View -->
        <record id="auto_email_group_config_view_list" model="ir.ui.view">
            <field name="name">auto.email.group.config.view.list</field>
            <field name="model">auto.email.group.config</field>
            <field name="arch" type="xml">
                <list string="Auto Email Group Configuration" editable="bottom">
                    <field name="group_id" required="1"/>
                    <field name="active"/>
                    <field name="user_count" readonly="1"/>
                </list>
            </field>
        </record>
        
        <!-- Group Configuration Action -->
        <record id="auto_email_group_config_action" model="ir.actions.act_window">
            <field name="name">Auto Email Activity Groups</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">auto.email.group.config</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add user groups for automatic email activity creation
                </p>
                <p>
                    Select which user groups should have automatic email activities created 
                    when they send external emails through chatter in Sales and Helpdesk apps.
                </p>
            </field>
        </record>
    </data>
</odoo>